<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Terra.EmptyPlantSlot"
             Title="EmptyPlantSlot"
             xmlns:viewmodel="clr-namespace:Terra.ViewModels"
             x:DataType="viewmodel:PlantViewModel">
    <VerticalStackLayout>
        <!-- promt button -->
        <Button
            Margin="0, 200, 0 ,0"
            ImageSource="prompt_add_button.png"
            BackgroundColor="White"
            HeightRequest="150"
            WidthRequest="150"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Command="{Binding ToWorkspaceDisplayCommand}"/>
        <!-- prompt label -->
        <Label
            Grid.Row="0"
            HorizontalOptions="Center"
            Text="Add Plant"
            TextColor="#C6C6C6"
            FontSize="25"/> 
    </VerticalStackLayout>
</ContentPage>
