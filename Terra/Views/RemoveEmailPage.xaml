<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Terra.RemoveEmailPage"
             Title="RemoveEmailPage"
             xmlns:viewmodel="clr-namespace:Terra.ViewModels"
             x:DataType="viewmodel:EmailSubViewModel">
    <VerticalStackLayout>
        <Entry
            Margin="25"
            FontSize="15"
            HeightRequest="53"
            BackgroundColor="#F7F7F7"
            Placeholder="Enter your email..."
            PlaceholderColor="#838383"
            Text="{Binding EmailModel.Email}"
            />
        <Button
            HeightRequest="40"
            WidthRequest="222"
            Text="Confirm"
            TextColor="Black"
            BackgroundColor="#CAD7C4"
            Command="{Binding DeleteEmailCommand}"
            />
    </VerticalStackLayout>
</ContentPage>